{
  "manifest_version": 3,
  "name": "Dhyan",
  "version": "0.0.1",
  "description": "Zen mode for the Web.",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["webNavigation", "scripting", "activeTab", "storage"],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.google.com/",
    "*://*.x.com/*",
    "*://discord.com/*"
  ],
  "action": {
    "default_popup": "popup/toggle.html"
  }
}
